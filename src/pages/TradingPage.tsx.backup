                </div>
              </div>
              <div className="p-4 grid grid-cols-3 gap-3">
                {LEVERAGE_OPTIONS.map(lev => (
                  <button
                    key={lev}
                    onClick={() => {
                      setFuturesLeverage(lev);
                      setShowLeverageModal(false);
                    }}
                    className={`p-3 rounded-lg text-center ${
                      futuresLeverage === lev
                        ? 'bg-teal-400 text-gray-900'
                        : 'bg-gray-800 text-gray-400'
                    }`}
                  >
                    {lev}x
                  </button>
                ))}
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Scheduled Time Modal */}
      <AnimatePresence>
        {showScheduledModal && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 flex items-end justify-center z-50 p-4"
            onClick={() => setShowScheduledModal(false)}
          >
            <motion.div
              initial={{ y: 100 }}
              animate={{ y: 0 }}
              exit={{ y: 100 }}
              className="bg-[#1E2329] border border-gray-800 rounded-t-2xl w-full max-w-md"
              onClick={e => e.stopPropagation()}
            >
              <div className="p-4 border-b border-gray-800">
                <div className="flex items-center justify-between">
                  <div>
                    <h3 className="text-lg font-semibold text-white">Scheduled Time</h3>
                    <p className="text-xs text-gray-400 mt-1">
                      Customize opening time (UTC+0) for your position
                    </p>
                  </div>
                  <button onClick={() => setShowScheduledModal(false)}>
                    <X className="w-5 h-5 text-gray-400" />
                  </button>
                </div>
              </div>

              <div className="p-4 space-y-4">
                {/* Current Time Display */}
                <div className="bg-gray-800 rounded-lg p-3">
                  <div className="text-center">
                    <div className="text-xs text-gray-400 mb-1">Current Time (UTC+0)</div>
                    <div className="text-lg font-mono text-white">{currentUTC}</div>
                  </div>
                </div>

                {/* Time Selector */}
                <div className="grid grid-cols-3 gap-3">
                  {/* Hours */}
                  <div>
                    <label className="text-xs text-gray-400 block mb-1">Hours</label>
                    <div className="bg-gray-800 rounded-lg p-2 flex items-center justify-between">
                      <button
                        onClick={() => setScheduledTime(prev => ({ ...prev, hours: Math.max(0, prev.hours - 1) }))}
                        className="text-gray-400 hover:text-white"
                      >
                        <Minus className="w-4 h-4" />
                      </button>
                      <span className="text-lg font-mono text-white">
                        {scheduledTime.hours.toString().padStart(2, '0')}
                      </span>
                      <button
                        onClick={() => setScheduledTime(prev => ({ ...prev, hours: Math.min(23, prev.hours + 1) }))}
                        className="text-gray-400 hover:text-white"
                      >
                        <Plus className="w-4 h-4" />
                      </button>
                    </div>
                  </div>

                  {/* Minutes */}
                  <div>
                    <label className="text-xs text-gray-400 block mb-1">Minutes</label>
                    <div className="bg-gray-800 rounded-lg p-2 flex items-center justify-between">
                      <button
                        onClick={() => setScheduledTime(prev => ({ ...prev, minutes: Math.max(0, prev.minutes - 1) }))}
                        className="text-gray-400 hover:text-white"
                      >
                        <Minus className="w-4 h-4" />
                      </button>
                      <span className="text-lg font-mono text-white">
                        {scheduledTime.minutes.toString().padStart(2, '0')}
                      </span>
                      <button
                        onClick={() => setScheduledTime(prev => ({ ...prev, minutes: Math.min(59, prev.minutes + 1) }))}
                        className="text-gray-400 hover:text-white"
                      >
                        <Plus className="w-4 h-4" />
                      </button>
                    </div>
                  </div>

                  {/* Seconds */}
                  <div>
                    <label className="text-xs text-gray-400 block mb-1">Seconds</label>
                    <div className="bg-gray-800 rounded-lg p-2 flex items-center justify-between">
                      <button
                        onClick={() => setScheduledTime(prev => ({ ...prev, seconds: Math.max(0, prev.seconds - 1) }))}
                        className="text-gray-400 hover:text-white"
                      >
                        <Minus className="w-4 h-4" />
                      </button>
                      <span className="text-lg font-mono text-white">
                        {scheduledTime.seconds.toString().padStart(2, '0')}
                      </span>
                      <button
                        onClick={() => setScheduledTime(prev => ({ ...prev, seconds: Math.min(59, prev.seconds + 1) }))}
                        className="text-gray-400 hover:text-white"
                      >
                        <Plus className="w-4 h-4" />
                      </button>
                    </div>
                  </div>
                </div>

                {/* Scheduled Time Display */}
                <div className="bg-gray-800 rounded-lg p-3">
                  <div className="text-center">
                    <div className="text-xs text-gray-400 mb-1">Open Position</div>
                    <div className="text-lg font-mono text-teal-400">
                      {scheduledTime.hours.toString().padStart(2, '0')}:
                      {scheduledTime.minutes.toString().padStart(2, '0')}:
                      {scheduledTime.seconds.toString().padStart(2, '0')} (UTC+0)
                    </div>
                  </div>
                </div>

                {/* Action Buttons */}
                <div className="flex gap-3 pt-2">
                  <button
                    onClick={handleCancelScheduled}
                    className="flex-1 bg-gray-800 text-gray-400 py-3 rounded-lg font-medium hover:bg-gray-700"
                  >
                    Cancel
                  </button>
                  <button
                    onClick={handleSaveScheduled}
                    className="flex-1 bg-teal-400 text-gray-900 py-3 rounded-lg font-medium hover:bg-teal-500"
                  >
                    Save
                  </button>
                </div>
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Duration Modal for Options */}
      <AnimatePresence>
        {showDurationModal && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 flex items-end justify-center z-50 p-4"
            onClick={() => setShowDurationModal(false)}
          >
            <motion.div
              initial={{ y: 100 }}
              animate={{ y: 0 }}
              exit={{ y: 100 }}
              className="bg-[#1E2329] border border-gray-800 rounded-t-2xl w-full max-w-md"
              onClick={e => e.stopPropagation()}
            >
              <div className="p-4 border-b border-gray-800">
                <h3 className="text-lg font-semibold text-white">Select Duration</h3>
              </div>
              <div className="p-4 space-y-2">
                {OPTIONS_TIMEFRAMES.map(option => (
                  <button
                    key={option.value}
                    onClick={() => {
                      setOptionDuration(option.value);
                      setOptionFluctuation(option.move);
                      setShowDurationModal(false);
                    }}
                    className={`w-full flex items-center justify-between p-4 rounded-lg ${
                      optionDuration === option.value
                        ? 'bg-teal-400/20 border border-teal-400'
                        : 'bg-gray-800 hover:bg-gray-700'
                    }`}
                  >
                    <div>
                      <span className="text-white font-medium">{option.label}</span>
                      <span className="text-xs text-gray-400 block mt-1">
                        Profit: +{(option.profit * 100).toFixed(0)}% • Move: ≥{option.move}%
                      </span>
                    </div>
                    {optionDuration === option.value && (
                      <CheckCircle className="w-5 h-5 text-teal-400" />
                    )}
                  </button>
                ))}
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Fluctuation Modal for Options */}
      <AnimatePresence>
        {showFluctuationModal && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 flex items-end justify-center z-50 p-4"
            onClick={() => setShowFluctuationModal(false)}
          >
            <motion.div
              initial={{ y: 100 }}
              animate={{ y: 0 }}
              exit={{ y: 100 }}
              className="bg-[#1E2329] border border-gray-800 rounded-t-2xl w-full max-w-md"
              onClick={e => e.stopPropagation()}
            >
              <div className="p-4 border-b border-gray-800">
                <h3 className="text-lg font-semibold text-white">Fluctuation Range</h3>
              </div>
              <div className="p-4 space-y-2">
                {FLUCTUATION_RANGES[optionDuration as keyof typeof FLUCTUATION_RANGES]?.map((range, idx) => (
                  <button
                    key={idx}
                    onClick={() => {
                      setOptionFluctuation(range.value);
                      setShowFluctuationModal(false);
                    }}
                    className={`w-full flex items-center justify-between p-4 rounded-lg ${
                      optionFluctuation === range.value
                        ? 'bg-teal-400/20 border border-teal-400'
                        : 'bg-gray-800 hover:bg-gray-700'
                    }`}
                  >
                    <div>
                      <span className="text-white font-medium">{range.label}</span>
                      <span className="text-xs text-gray-400 block mt-1">
                        Payout: {range.payout.toFixed(3)}x
                      </span>
                    </div>
                    {optionFluctuation === range.value && (
                      <CheckCircle className="w-5 h-5 text-teal-400" />
                    )}
                  </button>
                ))}
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}